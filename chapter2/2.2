; MISC
(define (average a b)
	(/ (+ a b) 2))

; POINTS
(define (make-point x y)
	(cons x y))

(define (x-point p)
	(car p))

(define (y-point p)
	(cdr p))

(define (print-point p)
	(display "(")
	(display (x-point p))
	(display ",")
	(display (y-point p))
	(display ")"))

; LINES
(define (make-segment p1 p2)
	(cons p1 p2))

(define (start-segment line)
	(car line))

(define (end-segment line)
	(cdr line))

(define (print-segment line)
	(print-point (start-segment line))
	(display "-->")
	(print-point (end-segment line))
	(newline))

(define (midpoint-segment line)
	(make-point (average (x-point (start-segment line)) (x-point (end-segment line)))
		    (average (y-point (start-segment line)) (y-point (end-segment line)))))

; TESTS
